<Window x:Class="Proiect_Hackathon_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proiect_Hackathon_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1444">

    <Grid Background="#F6F8EC">


        <!--
        
        -->
        <Image Source="/images/imagineHackaThon.png" Width="350" Height="350"  HorizontalAlignment="Left" VerticalAlignment ="Top" />
        <StackPanel HorizontalAlignment="center"  Background="white" Height="500" Width="300">
            <Grid Width="200" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <TextBlock x:Name="ProcentajTomberon" 
               Grid.Row="0"
               Text="Nivel: 0%"  FontSize="24" 
               FontWeight="Bold" 
               Foreground="#333333" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Margin="0,0,0,10"/>


                <Border Grid.Row="1" 
            Background="#E0E0E0"  CornerRadius="10" 
            BorderBrush="#CCCCCC" BorderThickness="1" 
            Width="80" HorizontalAlignment="Center">

                    <Grid>
                        <Border  CornerRadius="8">
                            <Rectangle x:Name="BaraDeUmplere"
                       Fill="#6CB4EE"  VerticalAlignment="Bottom" 
                       Height="0"/>
                        </Border>
                        

                        <TextBlock Text="Tomberon" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="18" 
                       Foreground="#666666" 
                       IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="2"
               Text="Nivel gunoi"
               FontSize="16"
               Foreground="#666666"
               HorizontalAlignment="Center"
               Margin="0,10,0,0"/>

            </Grid>

        </StackPanel>
            
    </Grid>

</Window>
